<div class="container">
  <h1></i><%= @restaurant.name %></h1>
  <h2><i class="fas fa-map-marker-alt"></i> <%= @restaurant.address %></h2>
  <h2><i class="fas fa-utensils"></i> <%= @restaurant.category.capitalize %></h2>
  <p><i class="fas fa-phone"></i> <%= @restaurant.phone_number %></p>

  <%= link_to "Back to list", restaurants_path, class: "btn btn-success"%>
</div><br>
<div class="container">
  <ol>
    <% @reviews.each do |review|%>
        <li><%= review.content%> <%= review.rating%><i class="fas fa-star"></i></li>
    <% end%>
  </ol>
  <%= link_to "Add a Review", new_restaurant_review_path(@restaurant), class: "btn btn-danger"%>
</div>
